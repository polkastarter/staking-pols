    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.5",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.1",
